<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/main_layout">


    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" >

            <!-- AudioSource block -->
            <LinearLayout
                android:id="@+id/audio_source_group"
                android:layout_width="fill_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <View
                    android:layout_width="fill_parent"
                    android:layout_height="20dp"
                    android:layout_weight="1"
                    android:background="#000000" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="horizontal">


                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="1">

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_alignParentEnd="false"
                            android:gravity="center_vertical"
                            android:layout_weight="1"
                            android:background="#333333"
                            android:paddingLeft="10dp"
                            android:paddingRight="10dp"
                            android:text="Audio Source" />

                        <android.support.v7.widget.AppCompatImageView
                            android:id="@+id/audio_source_info"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentRight="true"
                            android:layout_marginRight="20dp"
                            app:srcCompat="@android:drawable/ic_menu_info_details" />
                    </RelativeLayout>

                </LinearLayout>

                <com.hifitoy.widgets.AudioSourceWidget
                    android:id="@+id/audio_source1_outl"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:layout_marginTop="20dp"
                    android:layout_marginBottom="20dp"
                    android:layout_marginStart="20dp"
                    android:layout_marginEnd="20dp"/>
            </LinearLayout>

            <!-- Volume block -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1.1"
                android:layout_margin="20dp"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/volumeMinLimitLabel_outl"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center_vertical"
                    android:text="Volume"
                    android:textAlignment="textStart"
                    android:textSize="16sp" />

                <TextView
                    android:id="@+id/volumeLabel_outl"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center_vertical"
                    android:text="-5"
                    android:textColor="@color/colorOrange"
                    android:textAlignment="center"
                    android:textSize="20sp" />

                <TextView
                    android:id="@+id/volumeMaxLimitLabel_outl"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center_vertical"
                    android:text="dB"
                    android:textAlignment="textEnd"
                    android:textSize="16sp" />

            </LinearLayout>

            <com.hifitoy.widgets.Slider
                android:id="@+id/volumeSeekBar_outl"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="30dp"
                android:layout_marginRight="30dp"
                android:layout_marginBottom="20dp"
                android:layout_weight="1"
                android:max="1000"
                android:progressTint="@color/colorOrange"
                android:thumbTint="@color/colorOrange" />

            <!-- Bass block -->
            <View
                android:layout_width="fill_parent"
                android:layout_height="1dp"
                android:layout_weight="1"
                android:background="#444444" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:layout_marginLeft="20dp"
                android:layout_weight="1">

                <TextView
                    android:id="@+id/bass_outl"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_alignParentEnd="false"
                    android:gravity="center_vertical"
                    android:layout_weight="1"
                    android:text="Bass"
                    android:textSize="16sp"/>

                <ImageView
                    android:id="@+id/bass_treble_info"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_alignParentRight="true"
                    android:layout_marginRight="20dp"
                    android:layout_gravity="center_vertical"
                    android:src="@android:drawable/ic_menu_info_details" />
            </RelativeLayout>

            <!-- Treble block -->
            <View
                android:layout_width="fill_parent"
                android:layout_height="1dp"
                android:layout_weight="1"
                android:background="#444444" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:layout_marginLeft="20dp"
                android:layout_weight="1">

                <TextView
                    android:id="@+id/treble_outl"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_alignParentEnd="false"
                    android:gravity="center_vertical"
                    android:layout_weight="1"
                    android:text="Treble"
                    android:textSize="16sp"/>

            </RelativeLayout>


            <!-- Loudness block -->
            <View
                android:layout_width="fill_parent"
                android:layout_height="1dp"
                android:layout_weight="1"
                android:background="#444444" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:layout_marginLeft="20dp"
                android:layout_weight="1">

                <TextView
                    android:id="@+id/loudness_outl"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_alignParentEnd="false"
                    android:gravity="center_vertical"
                    android:layout_weight="1"
                    android:text="Loudness"
                    android:textSize="16sp"/>

                <ImageView
                    android:id="@+id/loudness_info"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_alignParentRight="true"
                    android:layout_marginRight="20dp"
                    android:layout_gravity="center_vertical"
                    android:src="@android:drawable/ic_menu_info_details" />
            </RelativeLayout>


            <!-- Filters block -->
            <View
                android:layout_width="fill_parent"
                android:layout_height="1dp"
                android:layout_weight="1"
                android:background="#444444" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:layout_marginLeft="20dp"
                android:layout_weight="1">

                <TextView
                    android:id="@+id/filtersActivity_outl"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_alignParentEnd="false"
                    android:gravity="center_vertical"
                    android:layout_weight="1"
                    android:text="Filters"
                    android:textSize="16sp"/>

                <ImageView
                    android:id="@+id/filters_control_info"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_alignParentRight="true"
                    android:layout_marginRight="20dp"
                    android:layout_gravity="center_vertical"
                    android:src="@android:drawable/ic_menu_info_details" />
            </RelativeLayout>

            <!-- Compressor block -->
            <View
                android:layout_width="fill_parent"
                android:layout_height="1dp"
                android:layout_weight="1"
                android:background="#444444" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:layout_marginLeft="20dp"
                android:layout_weight="1">

                <TextView
                    android:id="@+id/compressorActivity_outl"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_alignParentEnd="false"
                    android:gravity="center_vertical"
                    android:layout_weight="1"
                    android:text="Compressor"
                    android:textSize="16sp"/>

                <ImageView
                    android:id="@+id/compressor_control_info"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_alignParentRight="true"
                    android:layout_marginRight="20dp"
                    android:layout_gravity="center_vertical"
                    android:src="@android:drawable/ic_menu_info_details" />
            </RelativeLayout>

            <!-- Presets block -->
            <View
                android:layout_width="fill_parent"
                android:layout_height="1dp"
                android:layout_weight="1"
                android:background="#444444" />

            <TextView
                android:id="@+id/presetsActivity_outl"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:layout_marginLeft="20dp"
                android:gravity="center_vertical"
                android:layout_weight="1"
                android:text="Presets"
                android:textSize="16sp"/>

            <TextView
                android:id="@+id/savePresetBtn_outl"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:layout_marginLeft="20dp"
                android:gravity="center_vertical"
                android:layout_weight="1"
                android:text="Save"
                android:textSize="16sp"/>

            <!-- Options block -->
            <View
                android:layout_width="fill_parent"
                android:layout_height="1dp"
                android:layout_weight="1"
                android:background="#444444" />

            <TextView
                android:id="@+id/optionsActivity_outl"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:layout_marginLeft="20dp"
                android:gravity="center_vertical"
                android:layout_weight="1"
                android:text="Options"
                android:textSize="16sp"/>

        </LinearLayout>
    </ScrollView>
</LinearLayout>